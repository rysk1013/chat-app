<div class="wrapper">
  <div class="side-bar">
    <div class="side-bar-header">
      <div class="header-name">
        <a href="#">Tom</a>
      </div>

      <div class="create-room">
        <a href="#">チャットを作成する</a>
      </div>
    </div>

    <div class="rooms">
      <div class="room">
        <div class="room-name">
          <a href="#">testroom1</a>
        </div>
      </div>

      <div class="room">
        <div class="room-name">
          <a href="#">testroom2</a>
        </div>
      </div>
    </div>

    <%= render "side_bar" %>    
  </div>

  <div class="chat">
    <div class="chat-header">
      <div class="left-header">
        <div class="header-title">
          testtest        
        </div>
      </div>

      <div class="right-header">
        <div class="header-btn">
          <a href="#">チャットを終了する</a>
        </div>
      </div>
    </div>

    <div class="messages">
      <div class="message">
        <div class="upper-message">
          <div class="message-user">
            Test2
          </div>
          <div class="message-date">
            2021/01/30(Sat) 00:00:00
          </div>
        </div>
        <div class="lower-message">
          <div class="message-content">
            おはよう
          </div>
        </div>
      </div>

      <div class="message">
        <div class="upper-message">
          <div class="message-user">
            Test2
          </div>
          <div class="message-date">
            2021/01/30(Sat) 00:00:00
          </div>
        </div>
        <div class="lower-message">
          <div class="message-content">
            こんにちは
          </div>
        </div>
      </div>
    </div>

    <div class="form">
      <div class="form-input">
        <input class="form-message" type="text" placeholder="type a message">
        <label class="form-image">
          <span class="image-file">画像</span>
          <input type="file" class="hidden">
        </label>
      </div>
      <input class="form-submit" type="submit" value="送信">
    </div>
    
    <%= render "main_chat" %>
  </div>
</div>